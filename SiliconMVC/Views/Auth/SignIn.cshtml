@model SignInViewModel

@{
    ViewData["Title"] = Model.Title;
}

<section id="signin">

    <div class="container">



        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
            <h1>Welcome Back</h1>
            <p>Don't have an account yet? <a asp-controller="Auth" asp-action="SignUp">Sign up here</a></p>


            <div class="content">

                <div>
                    @Model.ErrorMessage
                </div>

                <div id="form-email" class="input-group">
                    <label asp-for=Form.EmailAddress></label>
                    <span asp-validation-for="Form.EmailAddress"></span>
                    <input asp-for="Form.EmailAddress" />
                </div>

                <div id="form-password" class="input-group">
                    <label asp-for=Form.Password></label>
                    <span asp-validation-for="Form.Password"></span>
                    <input asp-for="Form.Password" />
                </div>

                <div id="form-remember" class="checkbox">
                    <div class="checkbox-group">
                        <input asp-for="Form.RememberMe" />
                        <label asp-for="Form.RememberMe">Remember me</label>
                    </div>
                </div>

                <a id="form-forgot-password" asp-controller="Account" asp-action="Forgot">Forgot your password?</a>

                <button class="btn-theme" id="form-submit" type="submit">@Model.Title</button>

            </div>


        </form>
    </div>
</section>